<% if answer.errors.present? %>
  $('.answer-errors').html("<%=j render 'shared/errors', resource: answer %>");
<% else %>
  $('.answers').html("<%= j render @answers %>"); 
<% end %>

<% if answer.the_best? && answer.gift %>
  placeForGift = $('<%= ".answer-#{answer.id} .gift_answer_place" %>');
  moveGift(placeForGift);
<% end %>